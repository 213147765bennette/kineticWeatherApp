<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/weather_image"
            android:orientation="vertical"
            android:background="@drawable/sea_sunnypng"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txtCurrent_big_temp"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_marginTop="85dp"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="25"
            android:textColor="@color/white"
            android:textSize="65sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/weather_image" />

        <TextView
            android:id="@+id/txxMain_description"
            android:layout_width="94dp"
            android:layout_height="62dp"
            android:layout_marginEnd="45dp"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="SUNNY"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtCurrent_big_temp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/weather_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@id/txxMain_description"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main_weather_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:paddingEnd="1dp">


                <LinearLayout
                    android:id="@+id/weather_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:paddingTop="1dp"
                    android:paddingEnd="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/txt_min_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="12dp"
                                android:fontFamily="sans-serif-condensed"
                                android:text="19"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="1dp"
                                android:ellipsize="end"
                                android:fontFamily="sans-serif-condensed"
                                android:maxWidth="180dp"
                                android:maxLength="100"
                                android:maxLines="2"
                                android:padding="0dp"
                                android:singleLine="false"
                                android:text="@string/min"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_current_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="12dp"
                                android:fontFamily="sans-serif-condensed"
                                android:text="25"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="1dp"
                                android:fontFamily="sans-serif-condensed"
                                android:maxLines="2"
                                android:singleLine="false"
                                android:text="@string/current"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginEnd="50dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_max_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="12dp"
                                android:fontFamily="sans-serif-condensed"
                                android:text="27"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="1dp"
                                android:fontFamily="sans-serif-condensed"
                                android:maxLines="2"
                                android:singleLine="false"
                                android:text="@string/max"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view_space"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/weather_cardview"
            android:background="@android:color/white" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_fivedays_forecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/weather_background"
            app:layout_constraintTop_toBottomOf="@id/weather_cardview"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btn_refresh_weather"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_corned"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@+id/rv_fivedays_forecast"
            android:text="Refresh"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:visibility="gone"
            android:text="TESTING TEXT"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>